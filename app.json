{
  "expo": {
    "name": "LolTimeFlash",
    "slug": "loltimeflash-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "loltimeflash",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.loltimeflash.app"
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#021022"
      },
      "package": "com.loltimeflash.app"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-glass-effect",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#021022",
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "dark": {
            "backgroundColor": "#021022",
            "image": "./assets/images/icon.png"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "tsconfigPaths": true
    }
  }
}